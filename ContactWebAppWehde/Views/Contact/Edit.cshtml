@model Contact

@{
    string title = ViewBag.Action + " Contact";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="AddressID">Address</label>
        <select asp-for="AddressID" class="form-control">
            <option value="">Select an address</option>
            @foreach (Address a in ViewBag.Addresses)
            {
                <option value="@a.AddressID">@a.StreetAddress, @a.City, @a.State @a.Zip</option>
            }
        </select>
        <a asp-controller="Address" asp-action="Add">Add New Address</a>
    </div>

    <div class="form-group">
        <label asp-for="Note">Note</label>
        <input asp-for="Note" class="form-control">
    </div>

    <input type="hidden" asp-for="ContactID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>