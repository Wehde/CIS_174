@model Address

@{
    string title = ViewBag.Action + " Address";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="StreetAddress">Street Address</label>
        <input asp-for="StreetAddress" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <select asp-for="State" class="form-control">
            <option value="">Select a state</option>
            @foreach (string s in Model.STATES)
            {
                <option value="@s">@s</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Zip">Zip</label>
        <input asp-for="Zip" class="form-control">
    </div>

    <input type="hidden" asp-for="AddressID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Address" class="btn btn-outline-secondary">Cancel</a>
</form>